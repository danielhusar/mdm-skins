{
  "extends": [
    "airbnb",
    "plugin:react/recommended",
    "plugin:ava/recommended",
  ],
  "parser": "babel-eslint",
  "plugins": [
    "ava",
    "react",
  ],
  "env": {
    "browser": true,
    "node": true,
   },
  "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true,
  },
  "rules": {
    "arrow-body-style": [0],
    "comma-dangle": [1, "always-multiline"],
    "consistent-return": [0],
    "max-len": [1, 180, 4],
    "new-cap": [0],
    "space-in-parens": [0],
    "ava/no-cb-test": [2],
    "react/jsx-curly-spacing": [2, "always"],
    "react/no-did-mount-set-state": [0],
  }
}
